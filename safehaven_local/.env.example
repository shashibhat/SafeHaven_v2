FRIGATE_IMAGE=ghcr.io/blakeblackshear/frigate:stable
MOSQUITTO_IMAGE=eclipse-mosquitto:2
PYTHON_BASE_IMAGE=python:3.11-slim

# Default local mode uses the bundled mock Frigate endpoint.
# For real Frigate UI mode set: FRIGATE_BASE_URL=http://frigate:5000 and run compose with --profile frigate
FRIGATE_BASE_URL=http://mock-frigate:5001
METIS_DETECTOR_URL=http://metis-detector:8090/detect
SAFEHAVEN_CONFIG=/config/safehaven.yml

SAMPLE_FPS=1
LEFT_OPEN_MINUTES=3
QUEUE_MAX=50
METRICS_PORT=9108
HEALTH_PORT=9109
RTSP_TRANSPORT=tcp
LOG_FORMAT=json
LOG_LEVEL=INFO
STATE_CONF_THRESHOLD=0.10
METIS_TIMEOUT_S=2.5
DEBUG_STATE_EVERY=0
EMIT_BOOT_EVENT=0
EVIDENCE_DIR=/tmp/safehaven_evidence
SAVE_EVENT_MEDIA=1
DEMO_EMIT_INTERVAL_S=0
DEMO_ZONE=latch

# MOCK=1 is recommended on MacBook unless you have a compatible local model/runtime.
MOCK=1
MODEL_TASK=detect
MODEL_HOST_DIR=./models
MODEL_DIR=/models/best.pt

# Optional: override full camera JSON from env.
# CAMERAS=[{"name":"front_gate_cam","stream_url":"rtsp://rtsp:12345678@192.168.1.48:554/av_stream/ch0","rois":{"garage":{"x":0.05,"y":0.20,"w":0.40,"h":0.70},"gate":{"x":0.50,"y":0.20,"w":0.20,"h":0.70},"latch":{"x":0.72,"y":0.35,"w":0.12,"h":0.20}}}]
CAMERAS=

# Optional: map model class IDs to state semantics.
# Example:
# ZONE_CLASS_MAP={"garage":{"open":0,"closed":1},"gate":{"open":2,"closed":3},"latch":{"open":4,"closed":5}}
ZONE_CLASS_MAP=
